PRAGMA foreign_keys = ON;

-- Таблица пользователей
CREATE TABLE users (
    id VARCHAR(255) NOT NULL,
    name VARCHAR(255) NOT NULL,
    created_at DATETIME NOT NULL DEFAULT CURRENT_TIMESTAMP,
    PRIMARY KEY (id)
);

-- Таблица групп
CREATE TABLE groups (
    id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    name VARCHAR(255) NOT NULL UNIQUE
);

-- Таблица предметов
CREATE TABLE subjects (
    id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    name VARCHAR(255) NOT NULL UNIQUE
);

-- Таблица преподавателей
CREATE TABLE teachers (
    id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    name VARCHAR(255) NOT NULL UNIQUE
);

-- Таблица расписания звонков
CREATE TABLE timetable (
    lesson_number INTEGER NOT NULL PRIMARY KEY,
    lesson_name VARCHAR(20) NOT NULL,
    time_start TIME NOT NULL,
    time_end TIME NOT NULL
);

-- Таблица объединений (групповых чатов)
CREATE TABLE unions (
    id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    name VARCHAR(255) NOT NULL,
    created_by VARCHAR(255) NOT NULL,
    invite_code VARCHAR(255) NOT NULL UNIQUE,
    FOREIGN KEY (created_by) REFERENCES users(id) ON DELETE SET NULL
);

-- Таблица участников объединений
CREATE TABLE unionMembers (
    union_id INTEGER NOT NULL,
    user_id VARCHAR(255) NOT NULL,
    PRIMARY KEY (union_id, user_id),
    FOREIGN KEY (union_id) REFERENCES unions(id) ON DELETE CASCADE,
    FOREIGN KEY (user_id) REFERENCES users(id) ON DELETE CASCADE
);

-- Таблица связей между объединениями и группами
CREATE TABLE unionGroups (
    union_id INTEGER NOT NULL,
    group_id INTEGER NOT NULL,
    PRIMARY KEY (union_id, group_id),
    FOREIGN KEY (union_id) REFERENCES unions(id) ON DELETE CASCADE,
    FOREIGN KEY (group_id) REFERENCES groups(id) ON DELETE CASCADE
);

-- Таблица расписания занятий
CREATE TABLE schedule (
    id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    group_id INTEGER NOT NULL,
    day_of_week VARCHAR(20) NOT NULL,
    subject_id INTEGER NOT NULL,
    teacher_id INTEGER NOT NULL,
    room VARCHAR(50) NOT NULL,
    lesson_number INTEGER NOT NULL,
    FOREIGN KEY (group_id) REFERENCES groups(id) ON DELETE CASCADE,
    FOREIGN KEY (subject_id) REFERENCES subjects(id) ON DELETE CASCADE,
    FOREIGN KEY (teacher_id) REFERENCES teachers(id) ON DELETE SET NULL,
    FOREIGN KEY (lesson_number) REFERENCES timetable(lesson_number) ON DELETE CASCADE
);

-- Таблица домашних заданий
CREATE TABLE homework (
    id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    user_id VARCHAR(255) NOT NULL,
    subject_id INTEGER NOT NULL,
    due_date DATE NOT NULL,
    description TEXT NOT NULL,
    created_at DATETIME NOT NULL DEFAULT CURRENT_TIMESTAMP,
    FOREIGN KEY (user_id) REFERENCES users(id) ON DELETE CASCADE,
    FOREIGN KEY (subject_id) REFERENCES subjects(id) ON DELETE CASCADE
);</sql><current_tab id="0"/></tab_sql></sqlb_project>
